{
  "font": {
    "name": "ModernGroteskVF",
    "version": "1.0.0",
    "description": "Police sans-serif géométrique variable avec support complet des axes OpenType",
    "designer": "AI Assistant + Designer",
    "license": "OFL 1.1",
    "date": "2024-10-26"
  },

  "technical_specs": {
    "units_per_em": 1000,
    "ascender": 800,
    "descender": -200,
    "line_gap": 100,
    "x_height": 500,
    "cap_height": 700,
    "underline_position": -100,
    "underline_thickness": 50
  },

  "variable_axes": {
    "wght": {
      "name": "Weight",
      "tag": "wght",
      "minimum": 100,
      "default": 400,
      "maximum": 900,
      "description": "Contrôle la graisse de la police de thin à black"
    },

    "wdth": {
      "name": "Width",
      "tag": "wdth",
      "minimum": 50,
      "default": 100,
      "maximum": 200,
      "description": "Contrôle la largeur des caractères de condensed à extended"
    },

    "ital": {
      "name": "Italic",
      "tag": "ital",
      "minimum": 0,
      "default": 0,
      "maximum": 1,
      "description": "Contrôle l'inclinaison de upright à italic"
    },

    "opsz": {
      "name": "Optical Size",
      "tag": "opsz",
      "minimum": 8,
      "default": 16,
      "maximum": 144,
      "description": "Optimise les proportions selon la taille d'usage"
    }
  },

  "masters": {
    "thin": {
      "wght": 100,
      "wdth": 100,
      "ital": 0,
      "opsz": 16,
      "stem_width": 50,
      "x_height_ratio": 0.65,
      "contrast": 0.1
    },

    "regular": {
      "wght": 400,
      "wdth": 100,
      "ital": 0,
      "opsz": 16,
      "stem_width": 120,
      "x_height_ratio": 0.68,
      "contrast": 0.15
    },

    "black": {
      "wght": 900,
      "wdth": 100,
      "ital": 0,
      "opsz": 16,
      "stem_width": 280,
      "x_height_ratio": 0.70,
      "contrast": 0.25
    },

    "condensed": {
      "wght": 400,
      "wdth": 50,
      "ital": 0,
      "opsz": 16,
      "stem_width": 140,
      "x_height_ratio": 0.66,
      "contrast": 0.18
    },

    "extended": {
      "wght": 400,
      "wdth": 200,
      "ital": 0,
      "opsz": 16,
      "stem_width": 100,
      "x_height_ratio": 0.70,
      "contrast": 0.12
    },

    "italic": {
      "wght": 400,
      "wdth": 100,
      "ital": 1,
      "opsz": 16,
      "stem_width": 110,
      "x_height_ratio": 0.67,
      "contrast": 0.16,
      "slant_angle": 12
    }
  },

  "interpolation": {
    "compatibility": {
      "fontmake": true,
      "glyphs": true,
      "fontforge": true
    },

    "design_space": {
      "dimensions": 4,
      "total_masters": 5,
      "interpolated_instances": 64,
      "optimized_axes": ["wght", "wdth", "ital"]
    },

    "quality_checks": {
      "contour_compatibility": true,
      "spacing_consistency": true,
      "stem_width_harmony": true,
      "optical_correction": true
    }
  },

  "openType_features": {
    "required": [
      "kern", "liga", "calt", "mark", "mkmk"
    ],

    "optional": [
      "ss01", "ss02", "ss03", "tnum", "onum", "pnum", "lnum", "dlig", "hlig"
    ],

    "stylistic_sets": {
      "ss01": "Alternative 'a' avec double boucle",
      "ss02": "Alternative 'g' à deux étages",
      "ss03": "Terminaisons arrondies sur les empattements"
    }
  },

  "character_support": {
    "basic_latin": "U+0020-U+007F",
    "latin_extended": "U+0080-U+00FF",
    "latin_extended_a": "U+0100-U+017F",
    "latin_extended_b": "U+0180-U+024F",
    "spacing_modifiers": "U+02B0-U+02FF",
    "combining_diacritics": "U+0300-U+036F",
    "greek_coptic": "U+0370-U+03FF",
    "cyrillic": "U+0400-U+04FF",

    "total_glyphs": 850,
    "core_glyphs": 256,
    "extended_glyphs": 594
  },

  "web_optimization": {
    "woff2_compression": {
      "target_ratio": 0.3,
      "quality_preserved": true
    },

    "hinting": {
      "auto_hinting": true,
      "manual_zones": [8, 9, 10, 12, 14, 16, 18, 20, 24, 28, 32, 36, 48, 60, 72],
      "rendering_quality": "high"
    },

    "loading": {
      "font_display": "swap",
      "preload": true,
      "unicode_range": "U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD"
    }
  },

  "css_usage": {
    "font_family": "ModernGroteskVF, system-ui, sans-serif",

    "variable_examples": [
      "font-variation-settings: 'wght' 400, 'wdth' 100, 'ital' 0, 'opsz' 16",
      "font-variation-settings: 'wght' 700, 'wdth' 75, 'ital' 1, 'opsz' 24",
      "font-variation-settings: 'wght' 200, 'wdth' 150, 'ital' 0, 'opsz' 72"
    ],

    "responsive_examples": [
      "@media (max-width: 768px) { .text { font-variation-settings: 'opsz' 14; } }",
      "@media (min-width: 1200px) { .heading { font-variation-settings: 'wght' 800, 'opsz' 48; } }"
    ]
  },

  "design_principles": {
    "geometric_construction": true,
    "optical_illusion_compensation": true,
    "consistent_stem_widths": true,
    "harmonious_proportions": true,

    "influences": [
      "Helvetica (proportions et lisibilité)",
      "Futura (construction géométrique)",
      "Univers (système cohérent)",
      "Inter (optimisation web)"
    ]
  },

  "quality_metrics": {
    "readability": {
      "small_sizes": "excellent",
      "body_text": "excellent",
      "display_sizes": "very_good",
      "low_vision_friendly": true
    },

    "versatility": {
      "ui_compatibility": "excellent",
      "print_quality": "very_good",
      "web_performance": "excellent",
      "brand_applications": "excellent"
    },

    "technical": {
      "interpolation_smoothness": 9.5,
      "hinting_quality": 9.0,
      "compression_efficiency": 8.5,
      "cross_platform_consistency": 9.0
    }
  },

  "export_formats": {
    "variable": {
      "otf": "ModernGroteskVF.otf",
      "ttf": "ModernGroteskVF.ttf",
      "woff2": "ModernGroteskVF.woff2"
    },

    "static": {
      "thin": "ModernGrotesk-Thin.otf",
      "regular": "ModernGrotesk-Regular.otf",
      "bold": "ModernGrotesk-Bold.otf",
      "black": "ModernGrotesk-Black.otf",
      "italic": "ModernGrotesk-Italic.otf"
    }
  }
}
